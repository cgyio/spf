{
    "name": "spf",
    "var": "SpfVcom",
    "prefix": "sv",

    "version": {
        "@": "1.0.0",
        "latest": "1.0.0"
    },

    "required": [
        "icon"
    ],
    "loadmode": {
        "basic": [
            "navbar", "desktop-*"
        ]
    },

    "ext": ["js","css","vue","scss"],

    "content": {
        "1.0.0": {
            "js": {
                "default": {
                    "comment": "输出使用 ESM 导出的所有组件的定义代码，包含样式插入语句",
                    "params": {}
                },
                "esm-browser": {
                    "comment": "输出使用 ESM 导出的插件定义代码，所有组件都被定义为全局组件，外部只需要 use 此插件即可完成环境准备",
                    "params": {}
                },
                "iconset": {
                    "comment": "如果组件库使用了一个或多个本地图标库，则输出图标库对应的创建雪碧图的 JS 语句",
                    "param": {}
                }
            },

            "css": {
                "default": {
                    "comment": "输出组件库样式文件，已应用主题，以及组件库指定的需要合并的所有样式文件",
                    "params": {}
                },
                "iconset": {
                    "comment": "如果组件库使用了一个或多个本地图标库，则输出图标库对应的样式文件",
                    "params": {}
                }
            },

            "scss": {
                "default": {
                    "comment": "输出组件库样式的原始 SCSS 代码，未经编译的原始代码",
                    "params": {
                        "export": "scss",
                        "ignoreGet": true
                    }
                }
            },

            "vue": {
                "default": {
                    "comment": "输出组件库中某个组件的原始 vue 代码",
                    "params": {
                        "export": "vue",
                        "ignoreGet": true
                    }
                }
            }
        }
    }
}